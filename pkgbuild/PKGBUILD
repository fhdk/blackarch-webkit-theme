# Maintainer: FH <fh | uex | dk>

_branch=master
pkgname=blackarch-webkit-theme
pkgver=1.0.0
pkgrel=1
pkgdesc="A dark Blackarch lightdm-webkit-theme."
arch=('any')
url="https://github.com/fhdk/blackarch-webkit-theme"
license=('MIT GPL2')
depends=('lightdm' 'webkit2gtk>=2.12' 'accountsservice')
install='blackarch-webkit-theme.install'
changelog='changelog.txt'
source=(git+$url#branch=$_branch)
md5sums=('SKIP')
package() {
  cd "$pkgdir"
  mkdir -p usr/share/lightdm-webkit/themes/blackarch
  cd usr/share/lightdm-webkit/themes/blackarch
  cp --recursive "$srcdir/blackarch-webkit-theme/package" "blackarch"
}
